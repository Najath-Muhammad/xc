    <!-- Top Header -->
    <div class="top-header">
        <div class="header-left">
            <div class="current-page">
                <span id="pageName">Dashboard</span>
            </div>
        </div>
        <div class="header-right">
            <div class="admin-info">
                <i class="fas fa-user-circle"></i>
                <span class="admin-name">Admin</span>
            </div>
            <button class="logout-btn" onclick="window.location.href='/admin/logout';">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname;
        const pageName = document.getElementById('pageName');
        
        const pageNames = {
            '/admin/dashboard': 'Dashboard',
            '/admin/users': 'Users Management',
            '/admin/orders': 'Orders Management',
            '/admin/addProducts': 'Add Products',
            '/admin/products': 'Products Management',
            '/admin/category': 'Categories Management',
            '/admin/brands': 'Brands Management',
            '/admin/offers': 'Offers Management',
            '/admin/coupons': 'Coupons Management',
            '/admin/salesReport': 'Sales Report'
        };

        pageName.textContent = pageNames[currentPath] || 'Dashboard';
    });
    </script>
