    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li data-filter=".new-arrivals">New Arrivals</li>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                <% for(let i = 0; i < products.length; i++) { %>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-12 mb-4">
                        <div class="product-cart-wrap shadow-sm rounded overflow-hidden" style="min-height: 500px;"> <!-- Increased overall card height -->
                            <!-- Image Section -->
                            <div class="product-img-action-wrap position-relative" style="height: 300px;"> <!-- Taller image container -->
                                <div class="product-img product-img-zoom h-100">
                                    <a href="/productDetails?id=<%= products[i]._id %>">
                                        <% if (products[i].productImage && products[i].productImage.length > 0) { %>
                                            <img class="default-img w-100 h-100 object-fit-cover" 
                                                 src="/uploads/re-image/<%= products[i].productImage[0] %>" 
                                                 alt="<%= products[i].productName %>">
                                        <% } else { %>
                                            <div class="no-image d-flex align-items-center justify-content-center bg-light text-muted" style="height: 100%;">
                                                Image not available
                                            </div>
                                        <% } %>
                                    </a>
                                </div>
                                <div class="product-action-1 position-absolute top-0 end-0 p-2">
                                    <a aria-label="Add to Wishlist" class="action-btn hover-up text-danger" href="/addToWishList?id=<%= products[i]._id %>">
                                        <i class="bi bi-heart-fill"></i>
                                    </a>
                                </div>
                            </div>
            
                            <!-- Content Section -->
                            <div class="product-content-wrap p-4 d-flex flex-column justify-content-between text-center">
                                <!-- Product Name -->
                                <h6 class="product-title mb-3 text-truncate" style="max-width: 100%;">
                                    <a href="/productDetails?id=<%= products[i]._id %>" class="text-dark text-decoration-none fw-bold">
                                        <%= products[i].productName %>
                                    </a>
                                </h6>
            
                                <!-- Product Price -->
                                <h5 class="product-price text-success fw-bold mb-3">
                                    ₹<%= products[i].salePrice %>
                                </h5>
            
                                <!-- Add to Cart Button -->
                                <a href="/addToCart?id=<%= products[i]._id %>" class="btn btn-primary btn-sm w-100">
                                    Add to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            
    </section>
      
    <!-- Product Section End -->

