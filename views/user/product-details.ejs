    <script>
        document.getElementById('product-quantity').addEventListener('input', function() {
    var chosenQuantity = parseInt(this.value);
    var stockQuantity = parseInt(document.getElementById('product-data').getAttribute('data-quantity'));

    var errorMessage = document.getElementById('error-message');
    var addToCartButton = document.getElementById('add-to-cart-btn');

    if (chosenQuantity > stockQuantity || chosenQuantity < 1 || chosenQuantity >10) {
        errorMessage.style.display = 'block';
        addToCartButton.disabled = true;
    } else {
        errorMessage.style.display = 'none';
        addToCartButton.disabled = false;
    }
});

document.getElementById('add-to-cart-btn').addEventListener('click', function(event) {
    const quantityInput = document.getElementById('product-quantity');
    const errorMessage = document.getElementById('error-message');
    const maxQuantity = document.getElementById('product-data').dataset.quantity;
    const quantity = parseInt(quantityInput.value, 10);

    if (quantity < 1 || quantity > 10 && maxQuantity < quantity) {
        errorMessage.style.display = 'block';
        event.preventDefault();
    } 
    else {
        errorMessage.style.display = 'none';
        addToCart('<%= product._id %>', '<%= product.salePrice %>');
    }
});

